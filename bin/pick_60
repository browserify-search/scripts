#! /usr/bin/env node

var db = require('../lib/db')
var pickX = require('../lib/pick_x')
var fs = require('fs')

db(function(err, db){
  if (err) return console.error(err.message)

  var moduleNames = []
  var modules = db.collection('modules')
  var criteria = {
    'testResults.browserify.test.passed': false
  }
  var cursor = modules.find(criteria, {name: true})

  cursor.each(function(err, module){
    if (err) console.error(err.message)
    if (!module) return end()
    moduleNames.push(module.name)
  })

  function end(){
    var selected = pickX(moduleNames, 60)
    console.log('Picking 60 out of', moduleNames.length)
    fs.writeFileSync('data/samples_test_failed.json',
      JSON.stringify(selected, null, '  '))
    console.log('Written to data/samples_test_failed.json')
    db.close()
  }
})